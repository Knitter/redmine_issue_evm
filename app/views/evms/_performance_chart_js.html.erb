<canvas id="myChartPerformance" width="900" height="250"></canvas>
<script>
var ctx = document.getElementById("myChartPerformance").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: <%= performance_chart_data[:labels] %>,
        datasets: [{
            label: "SPI",
            spanGaps: true,
            data: <%= performance_chart_data[:spi] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "dodgerblue",
            pointRadius: 0,
            backgroundColor: "dodgerblue",
            fill: false
        },{
            label: "CPI",
            spanGaps: true,
            data: <%= performance_chart_data[:cpi] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "limegreen",
            pointRadius: 0,
            backgroundColor: "limegreen",
            fill: false
        },{
            label: "CR",
            spanGaps: true,
            data: <%= performance_chart_data[:cr] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Orange",
            pointRadius: 0,
            backgroundColor: "Orange",
            fill: false
        }]
    },
    options: {
        title:  {
            display: true,
            text: <%= raw project_name.to_json %>
        },
        scales: {
            xAxes: [{
                type: 'time',
                distribution: 'linear',
                ticks: {
                    source: 'data'
                }
            }]
        }
    }
});
</script>