<canvas id="myChart" width="900" height="300"></canvas>
<script>
var data = <%= raw chart_data.to_json %>;
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: <%= chart_data[:labels] %>,
        datasets: [{
            label: "PV",
            spanGaps: true,
            data: <%= chart_data[:pv] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "dodgerblue",
            pointRadius: 0,
            backgroundColor: "dodgerblue",
            fill: false
        },{
            label: "EV",
            spanGaps: true,
            data: <%= chart_data[:ev] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "limegreen",
            pointRadius: 0,
            backgroundColor: "limegreen",
            fill: false
        },{
            label: "AC",
            spanGaps: true,
            data: <%= chart_data[:ac] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Orange",
            pointRadius: 0,
            backgroundColor: "Orange",
            fill: false
        },{
            label: "PV Daily",
            type: 'bar',
            data: <%= chart_data[:pv_daily] %>,
            borderWidth: 2,
            borderColor: "Orange",
            backgroundColor: "Orange"
        },{
            label: "Baseline",
            spanGaps: true,
            data: <%= chart_data[:baseline] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Navy",
            pointRadius: 0,
            backgroundColor: "Navy",
            fill: false
        },{
            label: "BAC",
            spanGaps: true,
            data: <%= chart_data[:bac] %>,
            borderDash: [8, 2],
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Navy",
            pointRadius: 0,
            backgroundColor: "Navy",
            fill: false
        },{
            label: "EAC",
            spanGaps: true,
            data: <%= chart_data[:eac] %>,
            borderDash: [8, 2],
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Navy",
            pointRadius: 0,
            backgroundColor: "Navy",
            fill: false
        },{
            label: "AC Forecast",
            spanGaps: true,
            data: <%= chart_data[:ac_forecast] %>,
            borderDash: [8, 2],
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Orange",
            pointRadius: 0,
            backgroundColor: "Orange",
            fill: false
        },{
            label: "EV Forecast",
            spanGaps: true,
            data: <%= chart_data[:ev_forecast] %>,
            borderDash: [8, 2],
            borderWidth: 2,
            lineTension: 0,
            borderColor: "limegreen",
            pointRadius: 0,
            backgroundColor: "limegreen",
            fill: false
        }]
    },
    options: {
        title:  {
            display: true,
            text: <%= raw project_name.to_json %>
        },
        scales: {
            xAxes: [{
                type: 'time',
                distribution: 'linear',
                ticks: {
                    source: 'data'
                }
            }]
        }
    }
});
</script>