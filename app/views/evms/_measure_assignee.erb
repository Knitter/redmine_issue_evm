<table id="evm-indicator-option_value-table" border="1" bordercolor = "#bbb">
  <tr>
    <th><%=l(:field_assigned_to)%></th>
    <th>BAC(<%=l(:field_assigned_to)%>)</th>
    <th>Complete EV</th>
    <th>PV</th>
    <th>EV</th>
    <th>AC</th>
    <th>SV</th>
    <th>CV</th>
    <th>SPI</th>
    <th>CPI</th>
  </tr>
  <% assignee_evm.each do |assignee_id, evm| %>
    <tr>
      <td><%=assignee_name(assignee_id)%></td>
      <td><%=evm.bac%></td>
      <td><%=evm.complete_ev%> %</td>
      <td><%=evm.today_pv%></td>
      <td><%=evm.today_ev%></td>
      <td><%=evm.today_ac%></td>
      <td><%=evm.today_sv%></td>
      <td><%=evm.today_cv%></td>
      <td <%=spi_color%>><%=evm.today_spi%></td>
      <td <%=cpi_color%>><%=evm.today_cpi%></td>
    </tr>
  <% end %>
</table>
