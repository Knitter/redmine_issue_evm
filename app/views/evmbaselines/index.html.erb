<h2>EvmbaselinesController#index</h2>
<%= @p %>
<% if @evm_baselines.nil? %>
    <p class="nodata"><%= l(:label_no_data) %></p>
<% else %>
    <table class="list versions">
      <thead><tr>
        <th><%= l(:label_baseline) %></th>
        <th><%= l(:field_description) %></th>
        <th><%= l(:field_status) %></th>
        <th><%= l(:label_created_date) %></th>
        <th style="width:15%"></th>
      </tr></thead>
      <tbody>
      <!-- TODO: Remove order by replacing model that orders when it stores -->
      <% @evm_baselines.each do |baseline| %>
          <tr class="baseline">
            <td class="subject"><%= baseline.subject %></td>
            <td class="description"><%= baseline.description %></td>
            <td class="status"><%= baseline.state %></td>
            <td class="created_on"><%= baseline.created_on %></td>
            <td class="buttons">
              <%= link_to l(:button_edit), {controller: :evmbaselines, action: 'edit', id: baseline.id}, :class => 'icon icon-edit' %>
            </td>
          </tr>
      <% end; reset_cycle %>
      </tbody>
    </table>
<% end %>

<div>
  <%= link_to "new", {controller:"evmbaselines", action:"new", id: @project.id}, :class => 'icon icon-add' %>
  <%= link_to "View EVM", {controller:"evms", action:"index"}, :class => 'icon icon-show' %>
</div>

