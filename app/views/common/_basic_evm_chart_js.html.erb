<canvas id="myChart" width="900" height="250"></canvas>
<%= raw chart_data.to_json %>
<script>
var data = <%= raw chart_data.to_json %>;
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: <%= chart_data[:labels] %>,
        datasets: [{
            label: "PV",
            spanGaps: true,
            data: <%= chart_data[:pv] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "dodgerblue",
            pointRadius: 0,
            backgroundColor: "dodgerblue",
            fill: false
        },{
            label: "EV",
            spanGaps: true,
            data: <%= chart_data[:ev] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "limegreen",
            pointRadius: 0,
            backgroundColor: "limegreen",
            fill: false
        },{
            label: "AC",
            spanGaps: true,
            data: <%= chart_data[:ac] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "Orange",
            pointRadius: 0,
            backgroundColor: "Orange",
            fill: false
        }]
    },
    options: {
        scales: {
            xAxes: [{
                type: 'time',
                distribution: 'linear',
                ticks: {
                    source: 'data'
                }
            }]
        }
    }
});
</script>