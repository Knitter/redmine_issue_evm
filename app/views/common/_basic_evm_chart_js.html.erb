<canvas id="chartid<%= id %>" width="900" height="200"></canvas>
<script>
var ctx = document.getElementById("chartid<%= id %>").getContext("2d");
var myChart = new Chart(ctx, {
    type: "line",
    data: {
        labels: <%= chart_data[:labels] %>,
        datasets: [{
            label: "PV",
            spanGaps: true,
            data: <%= chart_data[:pv] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "royalblue",
            pointRadius: 0,
            backgroundColor: "royalblue",
            fill: false
        },{
            label: "EV",
            spanGaps: true,
            data: <%= chart_data[:ev] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "forestgreen",
            pointRadius: 0,
            backgroundColor: "forestgreen",
            fill: false
        },{
            label: "AC",
            spanGaps: true,
            data: <%= chart_data[:ac] %>,
            borderWidth: 2,
            lineTension: 0,
            borderColor: "darkorange",
            pointRadius: 0,
            backgroundColor: "darkorange",
            fill: false
        }]
    },
    options: {
        scales: {
            xAxes: [{
                type: "time",
                time: {
                    unit: "day",
                    displayFormats: {
                        day: "MMM D"
                    }
                },
                distribution: "linear",
                ticks: {
                    source: "auto"
                },
                gridLines: {
                    display: false
                }                
            }],
            yAxes: [{
                gridLines: {
                    drawBorder: false
                }
            }]            
        },
        legend: {
            display: true,
            position: "bottom"
        }
    }
});
</script>